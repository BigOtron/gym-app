<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.2">
    <persistence-unit name="gym-app" transaction-type="RESOURCE_LOCAL">
        <provider>
            org.hibernate.jpa.HibernatePersistenceProvider
        </provider>

        <class>entity.User</class>
        <class>entity.Trainee</class>
        <class>entity.Trainer</class>
        <class>entity.Training</class>
        <class>entity.TrainingType</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5100/"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="superSecret"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

        </properties>
    </persistence-unit>
</persistence>